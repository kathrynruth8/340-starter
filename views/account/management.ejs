<main>
  <h1>Account Management</h1>

  <%- messages() %> <% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
  </ul>
  <% } %> <% if (accountData) { %>
  <h2>Welcome <%= accountData.account_firstname %></h2>

  <!-- Update account link for all account types -->
  <p>
    <a href="/account/update/<%= accountData.account_id %>"
      >Update Account Information</a
    >
  </p>

  <!-- Show Inventory Management section only for Employee or Admin -->
  <% if ( accountData.account_type === 'Employee' || accountData.account_type
  === 'Admin' ) { %>
  <h3>Inventory Management</h3>
  <p><a href="/inv">Manage Inventory</a></p>
  <% } %>

  <p>You're logged in.</p>
  <% } else { %>
  <p>Error loading account details.</p>
  <% } %>
</main>
