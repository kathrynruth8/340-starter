<div class="login-container">
    <h1><%= title %></h1>

    <% if (locals.message) { %>
      <div class="flash-message">
        <p><%= message %></p>
      </div>
    <% } %>

    <form action="/account/register" method="post">
      <label for="first_name">First Name:</label>
      <input 
        type="text" 
        id="first_name" 
        name="first_name" 
        required 
        value="<%= typeof locals.first_name != 'undefined' ? locals.first_name : '' %>"
      > <br /><br />

      <label for="last_name">Last Name:</label>
      <input 
        type="text" 
        id="last_name" 
        name="last_name" 
        required 
        value="<%= typeof locals.last_name != 'undefined' ? locals.last_name : '' %>"
      > <br /><br />

      <label for="email">Email:</label>
      <input 
        type="email" 
        id="email" 
        name="email" 
        required 
        value="<%= typeof locals.email != 'undefined' ? locals.email : '' %>"
      ><br /><br />

      <label for="password">Password:</label>
      <input 
        type="password" 
        id="password" 
        name="password" 
        required
      >
      <br /><br />

      <button type="submit">Register</button>
    </form>

    <p>Already have an account? <a href="/account/login">Login here</a></p>
  </div>
</body>