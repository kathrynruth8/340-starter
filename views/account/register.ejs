<!-- Flash Messages -->
<%- messages() %>
 
<% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
</ul>
<% } %>
 
<div class="login-container">
    <h1><%= title %></h1>

    <form action="/account/register" method="post">
      <label for="first_name">First Name:</label>
      <input 
        type="text" 
        id="first_name" 
        name="account_firstname" 
        required 
        value="<%= typeof locals.first_name != 'undefined' ? locals.first_name : '' %>"
      > <br /><br />

      <label for="last_name">Last Name:</label>
      <input 
        type="text" 
        id="last_name" 
        name="account_lastname" 
        required 
        value="<%= typeof locals.last_name != 'undefined' ? locals.last_name : '' %>"
      > <br /><br />

      <label for="email">Email:</label>
      <input 
        type="email" 
        id="email" 
        name="account_email" 
        required 
        value="<%= typeof locals.email != 'undefined' ? locals.email : '' %>"
      ><br /><br />

      <label for="password">Password:</label>
      <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
      <input 
        type="password" 
        id="password" 
        name="account_password" 
        required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
      >
      <br /><br />

      <button type="submit">Register</button>
    </form>

    <p>Already have an account? <a href="/account/login">Login here</a></p>
  </div>
</body>